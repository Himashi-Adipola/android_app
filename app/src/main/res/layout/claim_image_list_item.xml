<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/claim_image"
        android:layout_width="178dp"
        android:layout_height="143dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/rp_damage_type"
        android:layout_width="179dp"
        android:layout_height="24dp"
        android:layout_marginTop="36dp"
        android:text="Damage Type: "
        android:textColor="#008000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.323"
        app:layout_constraintStart_toEndOf="@+id/claim_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rp_damage_Category"
        android:layout_width="182dp"
        android:layout_height="21dp"
        android:layout_marginTop="12dp"
        android:text="Damage Category: "
        android:textColor="#800080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.371"
        app:layout_constraintStart_toEndOf="@+id/claim_image"
        app:layout_constraintTop_toBottomOf="@+id/rp_damage_type" />

    <TextView
        android:id="@+id/rp_cost_estimate"
        android:layout_width="181dp"
        android:layout_height="21dp"
        android:layout_marginEnd="4dp"
        android:text="Estimate Cost: "
        android:textColor="#D31E11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toEndOf="@+id/claim_image"
        app:layout_constraintTop_toBottomOf="@+id/rp_damage_Category"
        app:layout_constraintVertical_bias="0.019" />

</androidx.constraintlayout.widget.ConstraintLayout>